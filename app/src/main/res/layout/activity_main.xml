<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="25dp"
        android:src="@drawable/personadd" />

    <LinearLayout
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/box"
        android:orientation="vertical"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/kanit_medium"
            android:text="Sign Up"
            android:textColor="#3f4658"
            android:textSize="28sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/kanit_regular"
                    android:text="First Name"
                    android:layout_gravity="center"
                    android:textColor="#BC3F4658"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/ufirstname"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textfield"
                    android:layout_marginLeft="12dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/kanit_regular"
                    android:text="Last Name"

                    android:layout_gravity="center"
                    android:textColor="#BC3F4658"
                    android:textSize="18dp" />

                <EditText
                    android:focusable="auto"
                    android:id="@+id/ulastname"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textfield"
                    android:layout_marginLeft="12dp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/kanit_regular"
                    android:text="TelePhone "
                    android:layout_gravity="center"
                    android:textColor="#BC3F4658"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/utell"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textfield"
                    android:layout_marginLeft="12dp"
                    android:inputType="number"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/kanit_regular"
                    android:text="Email"
                    android:textColor="#BC3F4658"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/eemail"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textfield"
                    android:layout_marginLeft="12dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/kanit_regular"
                    android:text="Password"
                    android:textColor="#BC3F4658"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/ppassword"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textfield"
                    android:layout_marginLeft="12dp"
                    android:textColor="#000000" />






            </LinearLayout>


        </ScrollView>


        <Button
            android:id="@+id/uregisterr"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rejister"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/loginto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/kanit_regular"
            android:text="login"
            android:textColor="#BC3F4658"
            android:textSize="18dp" />



    </LinearLayout>

</RelativeLayout>